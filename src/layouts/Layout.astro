---
import Footer from "../components/Footer.astro";
import Nanvar from "../components/Nanvar.astro";
import "../styles/global.css";
interface Props {
  title: string;
  description: string;
}
const { description, title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body class="text-white">
    <Nanvar />
    <div
      class="fixed top-0 bottom-0 z-[-2] min-h-screen w-full bg-black">
      <img
        src="./images/Neon.webp"
        alt="background"
        class="relative z-[-2] w-full h-full top-0 opacity-[.1] brightness-100 object-cover
           animate-[pulse_6s_ease-in-out_infinite]"
      />
    </div>
  </body>
  <main>
    <slot />
  </main>
  <Footer />
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
