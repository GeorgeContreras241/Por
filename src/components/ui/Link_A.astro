---
 const { href, title, ariaLabel } = Astro.props;
---

<a
  class="flex items-center gap-x-4 text-sm md:px-6 px-2.5 py-2.5 bg-gray-800 text-white font-semibold rounded-md hover:cursor-pointer hover:bg-gray-700"
  href={href}
  title={title}
  target="_blank"
  rel="noreferrer"
  aria-label={ariaLabel}
>
  <slot />
</a>
